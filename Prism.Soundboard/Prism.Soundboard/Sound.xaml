<UserControl x:Class="Prism.Soundboard.Sound"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prism.Soundboard"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="26"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" x:Name="Filename" Text="Filename:" />
        <Button Grid.Column="1" x:Name="Save" Click="Save_Click" Padding="0" Width="18" Height="16">
            <StackPanel Orientation="Horizontal">
                <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE734;"/>
            </StackPanel>
        </Button>
        <TextBlock Grid.Column="2" x:Name="Slot" Text="" />
    </Grid>
</UserControl>
