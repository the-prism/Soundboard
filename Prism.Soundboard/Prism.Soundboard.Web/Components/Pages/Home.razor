@page "/"
@rendermode InteractiveServer

@using Prism.Soundboard.Web.Services

@inject IAudioService AudioService;

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

@foreach (var entry in AudioService.ListOfFiles)
{
    <p><button type="button" class="btn btn-primary" @onclick="() => AudioService.PlayFile(entry.Key)">@entry.Key</button></p>
}

